extends layout.pug

block content 
    main.main__container
        header.main__header.container-white My 배민
        section.main__banner
            img(src="assets/banner.jpg")
        section.main__login__container.container-white
            a.login(href="#") 
                .login-left
                    img(src="assets/user.png")
                    span 로그인 해주세요
                .login-right
                    i.fas.fa-chevron-right
        section.main__menus__container 
            ul.main__menus
                - const menus = {point: '포인트', coupon: '쿠폰함', present: '선물함', cart: '찜', order: '주문내역', review: '리뷰관리'}
                each menu, key in menus
                    li(class=`menus__menu ${key} container-white`)
                        img(src=`assets/${key}.png`)
                        span=menu
        section.main__campaign-banner__container.container-white
            .campaign-banner-right
                img(src="assets/root.png")
                span 일회용품 덜 쓰기, 함께해요!
            .campaign-banner-left
                i.fas.fa-chevron-right
